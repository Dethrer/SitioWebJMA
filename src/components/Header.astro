---
// Header.astro
import './src/styles/global.css'
import insignia from '../assets/insignia.png'
---

<header class="flex items-center justify-between py-4 px-6 bg-transparent animate-fadeInUp">
  <!-- Navegación izquierda -->
  <nav class="hidden md:flex flex-1 items-center justify-end">
    <ul class="flex gap-2 h-10">
      <li class="flex items-center"><a href="#" class="px-4 py-2 bg-blue-700/50 text-white rounded hover:bg-blue-800/60 transition-colors">Inicio</a></li>
      <li class="flex items-center"><a href="#" class="px-4 py-2 bg-blue-700/50 text-white rounded hover:bg-blue-800/60 transition-colors">Acerca de nosotros</a></li>
    </ul>
  </nav>
  
  <!-- Logo y nombre centrados -->
  <div class="flex flex-col items-center">
    <img src={insignia.src} alt="Logo" class="w-20 h-20" />
    <h1 class="text-xl font-bold text-black">José María Arguedas</h1>
  </div>
  
  <!-- Navegación derecha -->
  <nav class="hidden md:flex flex-1 items-center">
    <ul class="flex gap-2 h-10">
      <li class="flex items-center"><a href="#" class="px-4 py-2 bg-blue-700/50 text-white rounded hover:bg-blue-800/60 transition-colors">Nuestros Logros</a></li>
      <li class="flex items-center"><a href="#" class="px-4 py-2 bg-blue-700/50 text-white rounded hover:bg-blue-800/60 transition-colors">Anuncios</a></li>
      <li class="relative flex items-center">
        <button id="contacto-btn" class="px-4 py-2 bg-blue-700/50 text-white rounded hover:bg-blue-800/60 transition-colors flex items-center">
          <span>Contáctanos</span>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-4 h-4 ml-1">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
        <div id="contacto-dropdown" class="absolute right-0 top-full mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 hidden z-50">
          <div class="py-1">
            <a href="#" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-blue-700/50 hover:text-white cursor-pointer">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 mr-2 text-blue-600">
                <path d="M22.675 0h-21.35c-.732 0-1.325.593-1.325 1.325v21.351c0 .731.593 1.324 1.325 1.324h11.495v-9.294h-3.128v-3.622h3.128v-2.671c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.795.143v3.24l-1.918.001c-1.504 0-1.795.715-1.795 1.763v2.313h3.587l-.467 3.622h-3.12v9.293h6.116c.73 0 1.323-.593 1.323-1.325v-21.35c0-.732-.593-1.325-1.325-1.325z" />
              </svg>
              Facebook
            </a>
            <a href="#" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-blue-700/50 hover:text-white cursor-pointer">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 mr-2 text-green-600">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
              </svg>
              WhatsApp
            </a>
          </div>
        </div>
      </li>
    </ul>
  </nav>
  
  <!-- Menú móvil (aparece en pantallas pequeñas) -->
  <div class="md:hidden">
    <button class="text-blue-800" id="mobile-menu-button">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
    
    <div class="hidden absolute top-20 right-4 bg-blue-700/50 p-4 rounded shadow-lg z-50" id="mobile-menu">
      <ul class="flex flex-col gap-2">
        <li><a href="#" class="px-4 py-2 block text-white hover:bg-blue-800/60 rounded transition-colors">Inicio</a></li>
        <li><a href="#" class="px-4 py-2 block text-white hover:bg-blue-800/60 rounded transition-colors">Acerca de nosotros</a></li>
        <li><a href="#" class="px-4 py-2 block text-white hover:bg-blue-800/60 rounded transition-colors">Nuestros Logros</a></li>
        <li><a href="#" class="px-4 py-2 block text-white hover:bg-blue-800/60 rounded transition-colors">Anuncios</a></li>
        <li>
          <button id="mobile-contacto-btn" class="w-full text-left px-4 py-2 text-white hover:bg-blue-800/60 rounded transition-colors flex items-center justify-between">
            <span>Contáctanos</span>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-4 h-4 transition-transform duration-300">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div id="mobile-contacto-dropdown" class="hidden pl-4 mt-2">
            <a href="#" class="flex items-center px-4 py-2 text-white hover:bg-blue-800/60 rounded transition-colors cursor-pointer">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 mr-2 text-white">
                <path d="M22.675 0h-21.35c-.732 0-1.325.593-1.325 1.325v21.351c0 .731.593 1.324 1.325 1.324h11.495v-9.294h-3.128v-3.622h3.128v-2.671c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.795.143v3.24l-1.918.001c-1.504 0-1.795.715-1.795 1.763v2.313h3.587l-.467 3.622h-3.12v9.293h6.116c.73 0 1.323-.593 1.323-1.325v-21.35c0-.732-.593-1.325-1.325-1.325z" />
              </svg>
              Facebook
            </a>
            <a href="#" class="flex items-center px-4 py-2 text-white hover:bg-blue-800/60 rounded transition-colors cursor-pointer">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 mr-2 text-white">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
              </svg>
              WhatsApp
            </a>
          </div>
        </li>
      </ul>
    </div>
  </div>
</header>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fadeInUp {
    animation: fadeInUp 0.5s ease-out forwards;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Menú móvil
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton) {
      mobileMenuButton.addEventListener('click', () => {
        if (mobileMenu) {
          mobileMenu.classList.toggle('hidden');
        }
      });
    }
    
    // Dropdown de Contáctanos en escritorio
    const contactoBtn = document.getElementById('contacto-btn');
    const contactoDropdown = document.getElementById('contacto-dropdown');
    
    if (contactoBtn && contactoDropdown) {
      // Mostrar menú al hacer clic
      contactoBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        contactoDropdown.classList.toggle('hidden');
      });
      
      // Mostrar menú al pasar el mouse
      contactoBtn.addEventListener('mouseenter', () => {
        contactoDropdown.classList.remove('hidden');
      });
      
      // Conjunto de elementos para manejar hover
      const contactoContainer = contactoBtn.parentElement;
      if (contactoContainer) {
        contactoContainer.addEventListener('mouseleave', () => {
          contactoDropdown.classList.add('hidden');
        });
      }
      
      // Cerrar al hacer clic fuera
      document.addEventListener('click', () => {
        contactoDropdown.classList.add('hidden');
      });
      
      // Evitar que al hacer clic en los elementos del dropdown se cierre
      const dropdownLinks = contactoDropdown.querySelectorAll('a');
      dropdownLinks.forEach(link => {
        link.addEventListener('click', (e) => {
          e.stopPropagation();
          // Aquí puedes agregar la lógica para manejar la navegación
        });
      });
    }
    
    // Dropdown de Contáctanos en móvil
    const mobileContactoBtn = document.getElementById('mobile-contacto-btn');
    const mobileContactoDropdown = document.getElementById('mobile-contacto-dropdown');
    
    if (mobileContactoBtn && mobileContactoDropdown) {
      mobileContactoBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        mobileContactoDropdown.classList.toggle('hidden');
        
        // Rotar icono
        const icon = mobileContactoBtn.querySelector('svg');
        if (icon) {
          icon.style.transform = mobileContactoDropdown.classList.contains('hidden') ? 
            'rotate(0deg)' : 'rotate(180deg)';
        }
      });
      
      // Evitar que al hacer clic en los elementos del dropdown se cierre el menú móvil
      const mobileDropdownLinks = mobileContactoDropdown.querySelectorAll('a');
      mobileDropdownLinks.forEach(link => {
        link.addEventListener('click', (e) => {
          e.stopPropagation();
          // Aquí puedes agregar la lógica para manejar la navegación
        });
      });
    }
  });
</script>